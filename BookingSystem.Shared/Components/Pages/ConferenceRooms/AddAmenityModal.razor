<div class="modal fade" id="add-amenity-modal" role="dialog" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border">
            <EditForm Model="@Amenity" OnValidSubmit="HandleValidSubmit" id="add-amenity-form" autocomplete="off">
                <DataAnnotationsValidator />
                <ValidationSummary></ValidationSummary>
        
                <div class="modal-header px-x1 bg-light border-bottom-0">
                    <h5 class="modal-title">Create Amenity</h5>
                    <button class="btn-close me-n1" type="button" @onclick="CloseModal" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-x1">
                    @if (ShowToast)
                    {
                     <Toast Success="true" Message="@Message"/>
                    }
                    <div class="mb-3">
                        <label class="fs-0" for="amenityName">Name</label>
                        <InputText @bind-Value="@Amenity.Name" class="form-control" id="amenityName" type="text" name="title" required="required" />
                        <ValidationMessage For="@(()=>Amenity.Name)" />
                    </div>

              
       
                    <div class="mb-3">
                        <label class="fs-0" for="eventDescription">Description</label>
                        <InputTextArea @bind-Value="@Amenity.Description" class="form-control" rows="3" name="description" id="eventDescription"></InputTextArea>
                        <div class="invalid-feedback mt-0">
                        <ValidationMessage For="@(()=>Amenity.Description)" />

                        </div>

                    </div>
                    <div class="form-check">
                        <InputCheckbox @bind-Value="@Amenity.IsAvailable" class="form-check-input"   id="amenityAvail" name="allDay" />
                        <label class="form-check-label" for="amenityAvail">
                            Available
                        </label>
                    </div>
                    <div class="mb-3">
                        <label class="fs-0" for="conferenceType">Amenity type</label>
                        <InputSelect @bind-Value="@SelectedCategoryId" class="form-select" id="conferenceType" name="label">
                            @foreach (var category in Categories)
                            {
                                <option value="@category.AmenityCategoryId">@category.Name</option>
                            }
                        </InputSelect>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-end align-items-center bg-light border-0">
@*                     <a class="me-3 text-600" href="../app/events/create-an-event.html">More options</a>
 *@                 @if(!HideButton)
                    {
                    <button class="btn btn-primary px-4" type="submit">Save</button>
                    }
                </div>
            </EditForm>
        </div>
    </div>
</div>