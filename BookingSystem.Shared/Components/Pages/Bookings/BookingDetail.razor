@page "/booking-detail/{bookingId}"
@using BookingSystem.ClassLibrary
@inherits BaseComponent

@if(Booking !=null)
{
    
<div class="card mb-3">
    <div class="bg-holder d-none d-lg-block bg-card" style="background-image:url(_content/BookingSystem.Shared/assets/img/icons/spot-illustrations/corner-4.png);opacity: 0.7;"></div><!--/.bg-holder-->
    <div class="card-body position-relative">
        <h5>Booking Details: #@Booking.BookingNumber</h5>
        <p class="fs-10">@Booking.Created</p>
        <div>
            <strong class="me-2">Status: </strong>
            <div class="badge rounded-pill @Booking.Badge.Type fs-11">@Booking.Status<span class="fas @Booking.Badge.Icon ms-1" data-fa-transform=""></span></div>
        </div>
    </div>
</div>
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <h5 class="mb-3 fs-9">Employee Details</h5>
                    <h6 class="mb-2">@Booking.Employee.Name</h6>
                    <p class="mb-1 fs-10"><strong>Department: </strong>@Booking.Employee.Department</p>
                    <p class="mb-0 fs-10"> <strong>Email: </strong><a href="mailto:ricky@gmail.com">antony@example.com</a></p>
                    <p class="mb-0 fs-10"> <strong>Phone: </strong><a href="tel:7897987987">7897987987</a></p>
                </div>
                @if(Booking.Event != null)
                {
                    
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <h5 class="mb-3 fs-9">Conference Details</h5>
                    <h6 class="mb-2">@Booking.Event.Title</h6>
                    <p class="mb-0 fs-10"><strong>Start: </strong>  @Booking.Event.Start
                        <br /> <strong>End: </strong>  @Booking.Event.End</p>
                    @* <div class="text-500 fs-10">(Free Shipping)</div> *@
                </div>

                }

                @if (Booking.ConferenceRoom != null)
                {
                    <div class="col-md-6 col-lg-4">
                        <h5 class="mb-3 fs-9">Conference Room</h5>
                    <div class="d-flex">
                        <div class="card-body position-relative">
                            <h5>Name: @Booking.ConferenceRoom.Name</h5>
                            <p class="fs-10"><strong>Capacity: </strong>@Booking.ConferenceRoom.Capacity</p>
                            <div>
                                <strong class="me-2">Status: </strong>

                                    <div class="badge rounded-pill @(Booking.ConferenceRoom.IsAvailable ? "bg-soft-success":"bg-soft-warning") fs-11">@(Booking.ConferenceRoom.IsAvailable ? "Available" : "Unavailable")
                                        <span class="fas @(Booking.ConferenceRoom.IsAvailable ? "fa-check-circle":"fa-times-circle")" data-fa-transform="shrink-2"></span>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>


}
    <div class="card mb-3">
        <div class="card-body">
            <div class="form-check">
                <input value="@nameof(BookingStatus.Pending)" @onchange="UpdateBookingAsync" class="form-check-input" id="flexRadioDefault1" type="radio" name="flexRadioDefault" />
                <label class="form-check-label" for="flexRadioDefault1">@nameof(BookingStatus.Pending)</label>
            </div>
            <div class="form-check">
                <input value="@nameof(BookingStatus.Cancelled)" @onchange="UpdateBookingAsync" class="form-check-input" id="flexRadioDefault2" type="radio" name="flexRadioDefault" />
                <label class="form-check-label" for="flexRadioDefault2">@nameof(BookingStatus.Cancelled)</label>
            </div>
            <div class="form-check">
                <input value="@nameof(BookingStatus.Approved)" @onchange="UpdateBookingAsync" class="form-check-input" id="flexRadioDefault3" type="radio" name="flexRadioDefault" />
                <label class="form-check-label" for="flexRadioDefault3">@nameof(BookingStatus.Approved)</label>
            </div>
         </div>
    </div>
