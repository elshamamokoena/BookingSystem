@inherits BaseComponent


<div class="modal fade" id="addEventModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border">
            <EditForm Model="@Event" OnValidSubmit="CreateBooking" id="addEventForm" autocomplete="off">
                <div class="modal-header px-x1 bg-light border-bottom-0">
                    <h5 class="modal-title">Create Booking</h5>
                    <button class="btn-close me-n1" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-x1">
                    <div class="mb-3">
                        <label class="fs-0" for="eventTitle">Title</label>
                        <InputText @bind-Value="@Event.Title" class="form-control" id="eventTitle" type="text" name="title" required="required" />
                    </div>
                    <div class="mb-3">
                        <label class="fs-0" for="eventStartDate">Start Date</label>
                        <input @bind-value="@Event.Start" @bind-value:event="oninput" class="form-control " id="eventStartDate" type="datetime-local" required="required" name="startDate" placeholder="yyyy/mm/dd hh:mm" data-options='{"enableTime":"true","dateFormat":"Y/m/d H:i"}' />
                    </div>
                    <div class="mb-3">
                        <label class="fs-0" for="eventEndDate">End Date</label>
                        <input @bind-value="@Event.End" @bind-value:event="oninput" class="form-control " id="eventEndDate" type="datetime-local" name="endDate" placeholder="yyyy/mm/dd hh:mm" data-options='{"enableTime":"true","dateFormat":"Y/m/d H:i"}' />
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="eventAllDay" name="allDay" />
                        <label class="form-check-label" for="eventAllDay">
                            All Day
                        </label>
                    </div>
                    <div class="mb-3">
                        <label class="fs-0">Schedule Meeting</label>
                        <div><a class="btn badge-soft-success btn-sm" href="#!"><span class="fas fa-video me-2"></span>Add video conference link</a></div>
                    </div>
                    <div class="mb-3">
                        <label class="fs-0" for="eventDescription">Description</label>
                        <InputTextArea @bind-Value="@Event.Description"  class="form-control" rows="3" name="description" id="eventDescription"></InputTextArea>
                    </div>
                    <div class="mb-3">
                        <label class="fs-0" for="eventLabel">Label</label>
                        <select @bind-value="@Event.Label" @bind-value:event="oninput" class="form-select" id="eventLabel" name="label">
                            <option value="" selected="selected">None</option>
                            <option value="primary">Business</option>
                            <option value="danger">Important</option>
                            <option value="success">Personal</option>
                            <option value="warning">Must Attend</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="fs-0" for="conferenceType">Conference Type</label>
                        <InputSelect @bind-Value="@SelectedCategoryId" class="form-select" id="conferenceType" name="label">

                            @foreach(var category in Categories)
                            {
                                <option value="@category.CategoryId">@category.Name</option>
                            })
                        </InputSelect>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-end align-items-center bg-light border-0">
                    <a class="me-3 text-600" href="../app/events/create-an-event.html">More options</a>
                    <button class="btn btn-primary px-4" type="submit">Save</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
